	#						pos: self.pos

			Button:
				id: my_button6
				text: '6'
				font_size: 30


			Button:
				id: my_button7
				text: '7'
				font_size: 30


			Button:
				id: my_button8
				text: '8'
				font_size: 30


			Button:
				id: my_button9
				text: '9'
				font_size: 30


			Button:
				id: my_buttonstar
				text: '*'
				font_size: 30


