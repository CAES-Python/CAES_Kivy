#: import MeshLinePlot kivy.garden.graph.MeshLinePlot

<NuclearScreenManager>:
	MenuScreen:	
	NCPScreen:
	KnobScreen:


<MenuScreen>:
	name: 'menu'
	BoxLayout:
		orientation: 'vertical'
		Label:
			text:'Welcome to the Menu!'
			font_size:50
		BoxLayout:
			Button:
				text:'Nuclear Control Panel'
				font_size:30
				on_release:app.root.current ='ncp'
			Button:
				text:'Knob Panel'
				font_size:30
				on_release:app.root.current ='knob'

<NuclearControlPanel>:
	

	orientation: 'vertical'
	BoxLayout:
		Graph: 
			id: my_plot
			xlabel: "Time (s)"
			ylabel: "Level"
			ymax:1.5
			ymin: -1.5
			
		Graph: 
			id:my_real_plot
			xlabel: "Time (s)"
			ylabel: "Rate"
			ymax:1.5
			ymin: -1.5

	BoxLayout: 
		size_hint:[1,3]
		orientation:'horizontal'
