				markeroff_color: 0.0, 0.0, .0, 1
				knobimg_size: 0.9
				marker_img: "/usr/lib/python2.7/dist-packages/kivy/garden/knob/img/bline3.png"	


		GridLayout:
			cols: 3
			rows: 4
	#			spacing: 0,70
			Button:
				id: my_buton1
				text: '1'
				font_size: 30
	

			Button:
				id: my_button2
				text: '2'
