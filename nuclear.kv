<NCPScreen>:
	name: 'ncp'
	NuclearControlPanel:
<KnobScreen>:
	name: 'knob'
	BoxLayout:
		orientation: 'vertical'

		Gauge: 
			value: knob1.value
		BoxLayout:
			Knob:
				id: knob1
				size: 100, 100
				value: 1
				min: 1
				max: 11
				step: 1
				knobimg_source: "/usr/lib/python2.7/dist-packages/kivy/garden/knob/img/knob_metal.png"
				knobimg_size: 0.9
				show_label: True
				show_marker: True
				on_touch_move: root.change_knob()
			Label:
				id:label
				text: str(knob1.value-1)
		BoxLayout:

			Button:
				id: Start_button
				size_hint:[0.1, 1]
				text: 'Start!!!'
				font_size: 30
				on_press:root.start()

				canvas:
					Color:
						rgba: 0, 1, 0, 0.5
					Rectangle:
						size: self.size
						pos: self.pos
			Button:
				id: Stop_button
				size_hint:[0.1, 1]
				text: 'SCRAM!!!'
				font_size: 30
				on_press:root.stop()

				canvas:
					Color:
						rgba: 1, 0, 0, 0.5
					Rectangle:
						size: self.size
						pos: self.pos
			Button:
				id:menubuttonknob
				size_hint:[0.1, 1]
				text: 'Menu'
				font_size: 30
				on_release: app.root.current ='menu'


