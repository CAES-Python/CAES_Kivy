<MenuScreen>:
	name: 'menu'
	BoxLayout:
		orientation: 'vertical'
		Label:
			text:'Welcome to the Menu!'
			font_size:50
		BoxLayout:
			Button:
				text:'Nuclear Control Panel'
				font_size:30
				on_release:app.root.current ='ncp'
			Button:
				text:'Knob Panel'
				font_size:30
				on_release:app.root.current ='knob'

